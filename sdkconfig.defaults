# USB Host Configuration
CONFIG_USB_HOST_ENABLE=y
CONFIG_USB_HOST_HCD_DWC2=y
CONFIG_USB_HOST_CONTROL_TRANSFER_MAX_SIZE=256
CONFIG_USB_HOST_BULK_TRANSFER_MAX_SIZE=512

# Partition table
CONFIG_PARTITION_TABLE_SINGLE_APP=y

# Flash size
CONFIG_ESPTOOLPY_FLASHSIZE_2MB=y

# Main task stack size (increased for USB Host)
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# Console over UART (not USB CDC to avoid conflicts)
CONFIG_ESP_CONSOLE_UART_DEFAULT=y

# Log level
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_DEFAULT_LEVEL=3

# WiFi
CONFIG_ESP32_WIFI_ENABLED=y

# HTTP Server
CONFIG_HTTPD_MAX_REQ_HDR_LEN=1024
CONFIG_HTTPD_MAX_URI_LEN=512

# FreeRTOS
CONFIG_FREERTOS_HZ=1000

# Component configurations
CONFIG_ESP_HTTP_SERVER_ENABLE=y 